{
    "compilerOptions": {
        // module resolution strategy ('node','classic')
        "moduleResolution": "node",
        //  ECMAScript target version ('ES3' (default), 'ES5', 'ES2015', 'ES2016', 'ES2017', or 'ESNEXT')
        "target": "ES2017",
        "sourceMap": true,
        "declaration": true,
        "outDir": "./dist/",
        "isolatedModules": false,
        "module": "ES2020"
    },
    "exclude": [
        "node_modules",
        "dist"
    ],
    "include": [
       "lib/*.ts",
       "test",
       "__mocks__"
    ]
}
